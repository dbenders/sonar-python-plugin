<rules>

  <rule>
    <key>MAXLEN</key>
    <name>Line too long.</name>
    <description>
      <![CDATA[Checks the maximum number of characters in a line.]]>
    </description>
    <priority>MINOR</priority>

    <param>
      <key>MAXLEN</key>
      <description>Maximum line length</description>
      <defaultValue>80</defaultValue>
    </param>
    <messages>
      <message>Line too long ({a}/{b})</message>
    </messages>
  </rule>
  
  <rule>
    <key>MISSING_DOCSTRING</key>
    <name>Missing docstring</name>
    <description>
      <![CDATA[]]>
    </description>
    <priority>MINOR</priority>
    <messages>
      <message>Missing docstring</message>
    </messages>
  </rule>

  <rule>
    <key>NO_SPACE_BEFORE_OP</key>
    <name>Operator not preceded by a space</name>
    <description>
      <![CDATA[]]>
    </description>
    <priority>MINOR</priority>
    <messages>
      <message>Operator not preceded by a space</message>
    </messages>
  </rule>
  
</rules>